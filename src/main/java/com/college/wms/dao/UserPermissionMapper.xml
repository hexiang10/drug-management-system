<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.college.wms.dao.UserPermissionMapper">

	<resultMap id="role" type="com.college.wms.domain.RoleDO">
		<id property="id" column="ROLE_ID"/>
		<result property="roleName" column="ROLE_NAME"/>
		<result property="roleDesc" column="ROLE_DESC"/>
	</resultMap>

	<select id="selectUserRole" resultMap="role">
		select
		r.ROLE_ID,
		r.ROLE_NAME,
		r.ROLE_DESC
		from
			db_wms_bs.wms_roles r, db_wms_bs.wms_user_role ur
		where
		r.ROLE_ID = ur.ROLE_ID and
		ur.USER_ID = #{userID}
	</select>
	
	<insert id="insert">
		insert into db_wms_bs.wms_user_role(ROLE_ID,USER_ID)
		values(#{roleID},#{userID})
	</insert>
	
	<delete id="deleteByUserID">
		delete from db_wms_bs.wms_user_role
		where USER_ID = #{userID}
	</delete>
</mapper>